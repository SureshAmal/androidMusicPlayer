<?xml version="1.0" encoding="utf-8" ?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
>

    <!-- App Bar with Back Button -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
    >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/primary_color"
            app:title=""
            app:titleTextColor="@color/primary_color" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center"
        >

            <!-- Album Art with Glow Effect -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/albumArtCard"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginBottom="48dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
            >

                <ImageView
                    android:id="@+id/imgAlbum"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_music_placeholder"
                    android:contentDescription="Album art"

                    android:scaleType="centerCrop"
                />

                <!-- Vinyl Record Effect Overlay -->
                <View
                    android:id="@+id/vinylOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/primary_color"
                    android:alpha="0.1"
                    android:visibility="gone"
                />

            </com.google.android.material.card.MaterialCardView>

            <!-- Song Info with Glassmorphism Effect -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#1AFFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#33FFFFFF"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center"
                >

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Song Title"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:gravity="center"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        tools:text="Beautiful Song Title"
                    />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvArtist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Artist Name"
                        android:textSize="18sp"
                        android:textColor="@color/gray_dark"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:maxLines="2"
                        tools:text="Famous Artist Name"
                    />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Section with Wave Animation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp"
            >

                <!-- Time Labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                >

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvCurrentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00"
                        android:textSize="14sp"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                    />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                    />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3:45"
                        android:textSize="14sp"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                    />

                </LinearLayout>

                <!-- Enhanced SeekBar -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="100"
                    app:thumbColor="@android:color/holo_red_dark"
                    app:trackColorActive="@android:color/holo_red_dark"
                    app:trackColorInactive="@color/gray_dark"
                    app:trackHeight="6dp"
                    app:thumbRadius="12dp"
                    app:haloColor="#40FFFFFF"
                    app:haloRadius="20dp"
                />

            </LinearLayout>

            <!-- Control Buttons with Breathing Animation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp"
            >



                <!-- Previous Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPrev"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/btn_circle_primary"
                    app:icon="@drawable/ic_skip_previous"
                    app:iconTint="@android:color/black"
                    app:iconSize="28dp"
                    android:contentDescription="Previous"
                />

                <!-- Play/Pause Button (Main) -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_marginHorizontal="20dp"
                    android:contentDescription="Play/Pause"
                    android:src="@drawable/ic_play"
                    app:backgroundTint="@android:color/white"
                    app:fabSize="normal"
                    app:pressedTranslationZ="20dp"
                    app:rippleColor="@color/primary_color"
                    app:tint="@color/primary_color" />

                <!-- Next Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/btn_circle_primary"
                    app:icon="@drawable/ic_skip_next"
                    app:iconTint="@android:color/black"
                    app:iconSize="28dp"
                    android:contentDescription="Next"
                />

            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Queue/Lyrics Bottom Sheet (Hidden by default) -->
    <include layout="@layout/bottom_sheet_queue" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
